<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New charapost:</h3>

    <form class="form new-chara-form">
      <div class="form-group">
        <label for="chara-name">Post name:</label>
        <input class="form-input" type="text" id="chara-title" name="chara-title" />
      </div>
      <div class="form-group">
        <label for="chara-body">Post Text:</label>
        <textarea class="form-input" id="chara-body" name="chara-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if charas.length}}
  <div class="col-md-6 chara-list">
    <h3>Current Posts:</h3>

    {{#each charas as |chara|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/chara/{{chara.id}}">{{chara.title}}</a></h4>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" data-id="{{chara.id}}">EDIT</button>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" data-id="{{chara.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>